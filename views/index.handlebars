<div class="col-md-6">
<h2>Available Burgers:</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="btn btn-danger" type="submit">Devour!</button>
        </form>
      </li><br>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">
<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="col-md-12">
  <form action="/" method="POST">
  <label class="center" for="ca">Enter a burger you want to eat, then press the Submit button</label>
    <input type="text" id="ca" name="burger_name" class="mytext">
    <br>
    <button class="center btn btn-danger" type="submit">Add Burger!</button>
  </form>
</div>